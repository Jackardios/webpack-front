{
  "name": "webpack-front",
  "version": "1.2.0",
  "description": "Frontend boilerplate and framework based on webpack, pug and sass",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && rm -rf build && rm -rf public_html",
    "clean--win": "rd /s /q dist && rd /s /q build && rd /s /q public_html",
    "build": "webpack --env=development",
    "build:production": "npm run clean && webpack -p --env=production",
    "start": "webpack-dev-server --env=development"
  },
  "keywords": [
    "pug",
    "sass",
    "scss",
    "webpack",
    "boilerplate",
    "html",
    "css",
    "js"
  ],
  "author": "Jackardios <salahutdinov.salavat@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.2.6",
    "babel-core": "^6.26.2",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "brigrid": "^1.4.0-alpha",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "css-mqpacker": "^6.0.2",
    "cssnano": "^3.10.0",
    "external-svg-sprite-loader": "^3.4.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "image-webpack-loader": "^3.6.0",
    "import-glob": "^1.5.0",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.4",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "resolve-url-loader": "^2.3.0",
    "sass-loader": "^6.0.7",
    "sass-math-pow": "^0.1.5",
    "sassy-gridlover": "^5.2.1",
    "style-loader": "^0.18.2",
    "svgo": "^0.7.2",
    "svgo-loader": "^1.2.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^0.5.9",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.2",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "font-awesome": "^4.7.0",
    "normalize.css": "^8.0.0",
    "svgxuse": "^1.2.6",
    "swiper": "^4.2.2"
  }
}
